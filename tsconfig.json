{
  // This is an alias to @tsconfig/node12: https://github.com/tsconfig/bases
  "extends": "ts-node/node12/tsconfig.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es6",
    "outDir": "./build",
    "rootDir": "./",
    "allowJs": false,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["./app.ts", "./src/**/*"],
}
